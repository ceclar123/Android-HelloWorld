<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText android:id="@+id/txtUrl" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="文件网络路径" android:padding="2dp" android:layout_margin="2dp"
              android:text="http://192.168.0.101:8080/360se.exe"/>
    <EditText android:id="@+id/txtFileName" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="新的文件名(英文名)" android:padding="2dp" android:layout_margin="2dp"
              android:text="/sdcard/360se.exe"/>
    <Button android:id="@+id/btnDownload" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="下载"
            android:padding="2dp" android:layout_margin="2dp"/>
    <ProgressBar android:id="@+id/progressBar1" android:layout_width="match_parent"
                 android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal"
                 android:padding="2dp" android:layout_margin="2dp"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText android:id="@+id/txtUrl" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="http://www.souhu.com"/>
    <Button android:id="@+id/btnLoad" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="下载"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                android:padding="2dp" android:layout_margin="2dp"
                android:scrollbars="vertical" android:scrollbarStyle="insideInset">
        <EditText android:id="@+id/txtContent" android:layout_width="match_parent"
                  android:layout_height="match_parent"/>
    </ScrollView>
</LinearLayout>
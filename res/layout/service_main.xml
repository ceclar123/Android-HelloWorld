<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="40dp"
                  android:orientation="horizontal"
                  android:layout_marginTop="2dp"
                  android:layout_marginBottom="2dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="来电监听"
                android:id="@+id/btn_phone_status"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="无交互服务"
                android:id="@+id/btn_music_service"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="有交互服务"
                android:id="@+id/btn_bind_service"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="40dp"
                  android:orientation="horizontal"
                  android:layout_marginTop="2dp"
                  android:layout_marginBottom="2dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="远程服务"
                android:id="@+id/btn_remote_service"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="注册Receiver"
                android:id="@+id/btn_register_receiver"/>
    </LinearLayout>
</LinearLayout>